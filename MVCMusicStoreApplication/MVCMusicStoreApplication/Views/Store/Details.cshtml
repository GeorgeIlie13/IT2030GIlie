@model MVCMusicStoreApplication.Models.Album

@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>

<div class="panel-body">

    <h2>Details</h2>
    <h3>@Model.Title</h3>
    <p>
        <img alt="@Model.Title" src="@Url.Content(Model.AlbumArtUrl)" />
    </p>
    <div id="album-details">
        <p>
            <em>Artist:</em>
            @Model.Artist.Name
        </p>

        <p>
            <em>Price:</em>
            @String.Format("{0:F}", Model.Price)
        </p>
       
        <button>
            @Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id = Model.AlbumId }, null)
        </button>
        
    </div>
</div>